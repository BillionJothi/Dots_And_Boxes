<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="69dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/player_icon"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="632dp" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/score_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/playerName"
        app:layout_constraintTop_toBottomOf="@+id/playerName" />

    <Button
        android:id="@+id/hintbutton"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_marginBottom="3dp"
        android:text="Hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/undobutton"
        app:layout_constraintTop_toTopOf="@+id/playerName"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/undobutton"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="35dp"
        android:text="Undo"
        app:layout_constraintStart_toEndOf="@+id/score_player"
        app:layout_constraintTop_toTopOf="@+id/hintbutton" />


</androidx.constraintlayout.widget.ConstraintLayout>