            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/themeText10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/themeButtonTextBottomPadding"
                android:text="@string/Theme1"
                android:textColor="@color/white"
                android:textSize="@dimen/themeButtonTextSize" />

            <Button
                android:id="@+id/theme7"
                android:layout_width="@dimen/themeButtonWidth"
                android:layout_height="@dimen/themeButtonHeight"
                android:background="@drawable/themevuttons_bg" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/themeText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/themeButtonTextBottomPadding"
                android:text="@string/Theme2"
                android:textColor="@color/white"
                android:textSize="@dimen/themeButtonTextSize" />

            <Button
                android:id="@+id/theme8"
                android:layout_width="@dimen/themeButtonWidth"
                android:layout_height="@dimen/themeButtonHeight"
                android:background="@drawable/themevuttons_bg" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/themeText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/themeButtonTextBottomPadding"
