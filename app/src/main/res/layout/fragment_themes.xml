                android:textColor="@color/white"
                android:textSize="@dimen/themeButtonTextSize" />

            <Button
                android:id="@+id/theme6"
                android:layout_width="@dimen/themeButtonWidth"
                android:layout_height="@dimen/themeButtonHeight"
                android:background="@drawable/themevuttons_bg" />
