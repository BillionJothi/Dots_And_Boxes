<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">


    <LinearLayout
        android:id="@+id/container_c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/top_game_fragment"
            android:name="com.djothi.dotsboxes.FragmentTopGame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"></fragment>

        <fragment
            android:id="@+id/game_fragment"
            android:name="com.djothi.dotsboxes.MainGameFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="5.0" />

        <fragment
            android:id="@+id/bottom_game_fragment"
            android:name="com.djothi.dotsboxes.FragmentBottomGame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"></fragment>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>